    <script>
        let menuBurger = document.getElementById('menu-burger')
        function openMenuBurger() {
            if (menuBurger.style.display === 'none') {
                menuBurger.style.height = '0'
                menuBurger.style.display = 'flex'
                menuBurger.style.height = '134px'
                menuBurger.classList.add('burger-open')
                menuBurger.classList.remove('burger-closed')
                return
            }
            if (menuBurger.style.display === 'flex') {
                menuBurger.classList.add('burger-closed')
                menuBurger.classList.remove('burger-open')
                setTimeout(() => {
                    menuBurger.style.display = 'none'
                }, 300)
                return
            }
        }
    </script>
