@model Enfant
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Supprimer ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="supprimer">
        <h1 class="text-white">Supprimer </h1>

        <h3 class="text-white">Êtes-vous sûr de vouloir supprimer ceci ?</h3>
        <div>
            <h4>Enfant</h4>
            <hr />
            <form asp-controller="GestionEnfant" asp-action="DeletePost" asp-route-id="@Model.Id">
                <table style="width:100%">
                    <tr>
                        <th>ID</th>
                        <th>Nom de film</th>
                        <th>Image</th>
                    </tr>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Id)</td>
                        <td>@Html.DisplayFor(model => model.Nom)</td>
                        <td>
                           
                            <img src="@Model.ImageURL" />
                        </td>
                    </tr>
                </table>
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Retour a la liste</a>
             </form>
        </div>
    </div>

</div>


@section style {
    <style>

        h1 {
            margin-top: 50px;
        }

        form {
            margin-bottom: 50px;
        }
    </style>
} 